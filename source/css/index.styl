@require './reset'
@require './fonts'
@require './logo'
@require './background'
@require './day-night'

body
  font: 24px/1.2 amatic, Courier New, PingFang SC, serif
  padding: 40px 20px

a
  color: lighten(#000, 60%)

section
  max-width: 300px
  margin: 0 auto

#title-section
  margin-bottom: 40px

#title
  text-align: center
  font-size: 60px

#store
  margin-top: 20px
  text-align: right

#intros
  margin-top: 40px
  position: relative
  height: 90px
  .intro
    position: absolute
    left: 0
    top: 0
    transition: opacity 3s ease-in-out
    &.hide
      opacity: 0

#btn-ios svg
  height: 24px
  vertical-align: -1px
